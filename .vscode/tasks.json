{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "debug-roku",
      "type": "shell",
      "presentation": {
        "clear": true,
        "reveal": "silent"
      },
      "problemMatcher": [],
      "command": "npm run debug"
    },
    {
      "label": "clean-roku",
      "type": "shell",
      "presentation": {
        "clear": true,
        "reveal": "silent"
      },
      "problemMatcher": [],
      "command": "npm run clean"
    },
    {
      "label": "copy-components-to-demo",
      "type": "shell",
      "command": "rm -rf ${workspaceFolder}/${input:demoTarget}/components/{collectorCore,${input:collectorAdapterTarget}} && cp -r ${workspaceFolder}/{collectorCore,${input:collectorAdapterTarget}} ${workspaceFolder}/${input:demoTarget}/components/"
    }
  ],
  "inputs": [
    {
      "id": "demoTarget",
      "type": "pickString",
      "description": "Select a demo target",
      "options": ["DemoBitmovinPlayerCollector", "DemoNativePlayerCollector"]
    },
    {
      "id": "collectorAdapterTarget",
      "description": "Select target adapter",
      "type": "pickString",
      "options": ["bitmovinPlayerCollector", "nativePlayerCollector"]
    }
  ]
}
