{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "brightscript",
      "request": "launch",
      "name": "Demo App",
      "stopOnEntry": false,
      "host": "${promptForHost}",
      "password": "${promptForPassword}",
      "rootDir": "${workspaceFolder}/${input:demoTarget}/",
      "sourceDirs": [
        "${workspaceFolder}/${input:demoTarget}"
      ],
      "preLaunchTask": "copy-components-to-demo",
      // "preLaunchTask": "debug-roku",
      // "postDebugTask": "clean-roku",
      "enableDebuggerAutoRecovery": true,
      "stopDebuggerOnAppExit": true,
      "outDir": "${workspaceFolder}/out",
      "files": [
        "manifest",
        "source/**/*.*",
        "components/**/*.*",
        "config/**/*.*"
      ]
    }
  ],
  "inputs": [
    {
      "id": "demoTarget",
      "type": "pickString",
      "description": "Pick a demo target",
      "options": ["DemoBitmovinPlayerCollector", "DemoNativePlayerCollector"]
    }
  ]
}
